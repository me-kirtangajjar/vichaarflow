<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/style'); %>
    <title>VichaarFlow - Share Your Thoughts</title>
  </head>
  <body class="bg-light">
    <%- include('./partials/navbar'); %>
    
    <main class="py-5">
      <div class="container">
        <h1 class="text-center mb-5">Latest Blogs</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <img src="<%= blog.coverImage %>" class="card-img-top" alt="<%= blog.title %>" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text flex-grow-1"><%= blog.description.substring(0, 100) %>...</p>
                  <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted"><%= new Date(blog.createdAt).toLocaleDateString() %></small>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read more</a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>

    <%- include('./partials/footer'); %>
    <%- include('./partials/script'); %>
  </body>
</html>